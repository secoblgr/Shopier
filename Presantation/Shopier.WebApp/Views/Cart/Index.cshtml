@using Shopier.Application.Dtos.CartDtos
@model GetByIdCartDto

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model.CartItems)

                    {
                        <tr>
                            <td class="align-middle"><img src="@item.Product.ImageUrl" alt="" style="width: 50px;">@item.Product.ProductName</td>
                            <td class="align-middle">@item.Product.Price</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus" onclick=" updateQuantity(@Model.CartId, @item.ProductId,@item.CartId)">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm bg-secondary text-center" id="quantity_@item.ProductId" name="quantity" onchange="updateQuantity(@Model.CartId, @item.ProductId,@item.CartId)" value="@item.Quantity">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus" onclik=" updateQuantity(@Model.CartId, @item.ProductId, @item.CartId)">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">@item.TotalPrice</td>
                            <td class="align-middle"><button class="btn btn-sm btn-primary" onclick="deleteFromCart(@item.CartItemId)"><i class="fa fa-times"></i></button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Subtotal</h6>
                        <h6 class="font-weight-medium">@Model.TotalAmount</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Total</h5>
                        <h5 class="font-weight-bold">@Model.TotalAmount</h5>
                    </div>
                    <a href="/order/checkout?cartId=@Model.CartId" class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

      window.deleteFromCart = function(id) {
        $.ajax({
            url: '/Cart/DeleteCartItem?id='+id,
            type: 'GET',
            success: function(res) {
                if (res.success) {
                    alert("success deleted");
                    location.reload();
                } else {
                    alert("error " + res.error);
                }
            },
            error: function(xhr, status, error) {
                alert("error " + error);
            }
        });
    };




    window.updateQuantity = function(cartid,prdid,cartitemid){
     var quantity = document.getElementById("quantity_" +  prdid).value;
            console.log(cartid);

         $.ajax({
            url: '/Cart/UpdateQuantity',
            type: 'POST',
            contentType:'application/json',
            data: {cartid: cartid, prdid :prdid ,quantity:quantity , cartitemid:cartitemid},
            success: function(res) {
                if (res.success) {
                    location.reload();
                } else {
                    alert("error " + res.error);
                }
            },
            error: function(xhr, status, error) {
                alert("error " + error);
            }
        });
    }
</script>
